<div class="question">
  <%= render 'question' %>
</div>
<hr>
<div class="answers">
  <%= render 'answers' %>
</div>
<%= form_with(model: [@question, @answer]) do |form| %>
  <div class="row">
    <div class="col-12">
      <%= form.label :body, 'Your answer' %>
      <div class="answer">
      </div>
      <div>
        <%= form.text_area :body, cols: 83, rows: 10 %>
      </div>
      <%= form.fields_for :attachments do |attachment| %>
        <%= attachment.label :file %>
        <div>
          <%= attachment.file_field :file %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= current_user ? form.submit : link_to('Sign in to answer the question', new_user_session_path) %>
    </div>
  </div>
<% end %>