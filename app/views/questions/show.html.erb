<div class="row">
  <div class="col-12">
    <%= @question.title %>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <%= @question.body %>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <%= link_to 'Edit', edit_question_path(@question) if @question.user == current_user %>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <%= link_to 'Delete', @question, method: :delete, data: { confirm: 'Are you sure?' } if @question.user == current_user %>
  </div>
</div>