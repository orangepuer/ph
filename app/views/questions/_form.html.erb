<% hidden = false unless local_assigns[:hidden] %>
<%= form_with(model: @question, html: { style: "display: #{ hidden ? 'none' : 'block' }"}, class: 'edit_question' ) do |form| %>
  <div class="row">
    <div class="col-12">
      <%= form.label :title %>
      <div>
        <%= form.text_field :title, maxlength: 80 %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= form.label :body %>
      <div>
        <%= form.text_area :body, cols: 83, rows: 10 %>
      </div>
    </div>
    <div class="col-12">
      <% if @question.new_record? %>
        <p>
          Attachments:
        </p>
        <%= form.fields_for :attachments do |attachment| %>
          <%= attachment.label :file %>
          <div>
            <%= attachment.file_field :file %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= form.submit %>
    </div>
  </div>
<% end %>